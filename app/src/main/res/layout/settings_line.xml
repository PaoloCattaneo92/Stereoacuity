<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_settings_name"
                android:text="Setting Name"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:textColorHint="#000000"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_settings_description"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Setting Description Lorem Ipsum bla bla bla"
                android:textStyle="italic"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="#a3000000" />

            <EditText
                android:id="@+id/edittext_actualvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3007"
                android:numeric="integer"
                android:textColor="#000000" />

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_settings_value"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Value= 3007"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="#000000" />
            -->

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>